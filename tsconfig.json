{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2015.generator",
      "es2015.iterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "build",
    "strict": true,
    "target": "es2020",
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "build/types"
  },
  "include": [
    "./src/**/*.ts",
    "@types/**/*.ts"
  ],
  "exclude": [
    "__test__/**/*.ts",
    "node_modules"
  ],
  "types": ["gluegun"]
}
